{
    "manifest_version": 3,
    "name": "LocalPDF - Private PDF Companion",
    "version": "2.0.0",
    "author": "LocalPDF Team",
    "homepage_url": "https://localpdf.online",
    "monetization": {
        "type": "tip_jar",
        "url": "https://buymeacoffee.com/localpdf"
    },
    "description": "Privacy-first PDF tools directly in your browser.",
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "src/background/index.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*.pdf*",
                "file://*/*.pdf*",
                "https://localpdf.online/*"
            ],
            "js": [
                "src/content/index.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "logo.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}