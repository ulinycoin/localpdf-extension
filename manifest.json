{
  "manifest_version": 3,
  "name": "LocalPDF Smart Launcher",
  "version": "0.1.0",
  "description": "Quick access to LocalPDF.online - seamlessly transfer PDF files to the privacy-focused PDF toolkit. Right-click any PDF to get started.",
  
  "permissions": [
    "contextMenus",
    "storage", 
    "activeTab"
  ],
  
  "host_permissions": [
    "https://localpdf.online/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*/*.pdf", "file://*/*.pdf", "*://*/*"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "LocalPDF Smart Launcher"
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png", 
    "128": "assets/icons/icon128.png"
  }
}